@using ASP.Server.Model

@model IEnumerable<Genre>
@{
    ViewData["Title"] = "Liste Genre";
}
<head>

        <link rel="stylesheet" href="~/css/list.css" />

</head>

<div class="listeGenres">
    <h1 class="title">Liste des Genres:</h1>
 <div class="row">
            <div class="col-12">
                <table class="tableau table  table-striped table-bordered">
                    <thead class="tr-custom">
                    <tr class="custom-th">
                        <th class="th-code">Name</th>
                        <th class="th-produit">Description</th>
                                                <th class="th-produit">Action</th>

 
           
                    </tr>
                    </thead>
                    <tbody>

                @foreach (var genre in Model)

                {      <tr class="td-custom" tabindex="0">
                            <td>@genre.Name</td>
                            <td>@genre.Description</td>
                                <td>
                                <form asp-controller="Genre" asp-action="RemoveGenre">
                                    <input type="hidden" value="@genre.Id" name="genreId">
                                    <input class="btn btn-warning" type="submit"  value="Delete" style="width: 20%;" />
                                 </form>

                                   <form asp-controller="Genre" asp-action="RedirectUpdateGenre">
                                    <input type="hidden" value="@genre.Id" name="genreId">
                                    <input class="btn btn-success" type="submit"  value="Update" style="width: 20%;" />
                                 </form>

                            </td>
                        </tr>
                   }
                    </tbody>
                </table>
            </div>
        </div>
</div>


